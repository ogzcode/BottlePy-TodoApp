.new__form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: white;
    border: 1px solid #00012b;
    border-radius: 4px;
    padding: 32px;
}

.new__title {
    text-transform: uppercase;
    font-weight: 400;
    margin-bottom: 16px;
    text-align: center;
    color: #00012b;
}

.new__input {
    outline: none;
    padding: 4px;
    width: 100%;
}

.new__btn--box {
    text-align: center;
    margin-top: 16px;
}

.new__button {
    padding: 8px 32px;
    background-color: #00012b;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: .2s;
}

.new__button:hover {
    opacity: .8;
}

#toast {
    position: absolute;
    bottom: 0;
    right: 0;
    background-color: #10c059;
    text-transform: uppercase;
    padding: 16px 64px;
    color: #fff;
}